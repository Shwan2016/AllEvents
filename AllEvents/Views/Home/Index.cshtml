@model AllEvents.ViewModels.EventsViewModel
@{
    ViewBag.Title = "Home Page";
}

<ul class="events">
    @foreach (var events in Model.UpcomingEvents)
    {
        <li>
            <div class="date">
                <div class="weekdays">
                    @events.DateTime.ToString("dddd")
                </div>
                <div class="day">
                    @events.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="creator">
                    @events.Creator.Name
                    @if (Model.ShowEvents)
                    {
                        <button class="btn btn-link btn-sm js-toggle-follow" data-user-id="@events.CreatorId">Follow</button>
                    }

                </span>
                <span class="eventType">
                    @events.EventType.Name
                </span>
                    @if (Model.ShowEvents)
                    {
                        <button data-event-id="@events.Id" class="btn btn-default bt-sm pull-right js-toggle-attendance">Going?</button>
                    }
            </div>
        </li>
    }

</ul> 
@section scripts
{
    <script>
        $(document).ready(function() {
            $(".js-toggle-attendance").click(function(e) {
                var button = $(e.target);
                $.post("/api/attendances", { eventId: button.attr("data-event-id") })
                    .done(function() {
                        button
                            .removeClass("btn-default")
                            .addClass("btn-primary")
                            .text("Going");
                    })
                    .fail(function() {
                        alert("It was not successful!");
                    });
            });

            $(".js-toggle-follow").click(function (e) {
                var button = $(e.target);
                $.post("/api/followings", { followeeId: button.attr("data-user-id") })
                    .done(function () {
                        button.text("Following");
                    })
                    .fail(function () {
                        alert("It was not successful!");
                    });
            });
        });
    </script>
}
