@model AllEvents.ViewModels.EventDetailsViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
    @Model.Event.Creator.Name
    @if (User.Identity.IsAuthenticated)
    {
        if (Model.IsFollowing)
        {
            <button class="btn btn-default">Following</button>
        }
        else
        {
            <button class="btn btn-info">Follow</button>
        }
    }
</h2>

<p>
    Performing
    at @Model.Event.Location
    on @Model.Event.DateTime.ToString("MMM-dd-yyyy")
    at @Model.Event.DateTime.ToString("HH:mm")
</p>

@if (User.Identity.IsAuthenticated && Model.IsAttending)
{
    <p>You are going to this event.</p>
}
